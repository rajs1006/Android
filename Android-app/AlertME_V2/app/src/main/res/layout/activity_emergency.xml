<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.com.alertme.activities.EmergencyActivity">

    <TextView
        android:id="@+id/localemergencytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local Emergency Number"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="31dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/localemergencycontact"
        android:layout_width="210dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="phone"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/localemergencytext"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/emergencybutton2"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:background="@android:drawable/ic_menu_call"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/emergencybutton1"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/emergencybutton1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/emergencybutton1"
        app:layout_constraintHorizontal_bias="0.47" />

    <Button
        android:id="@+id/emergencybutton1"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:background="@android:drawable/ic_menu_call"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/localemergencybutton"
        android:layout_marginTop="111dp"
        app:layout_constraintTop_toBottomOf="@+id/localemergencybutton"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/localemergencybutton"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/localemergencybutton"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:background="@android:drawable/ic_menu_call"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/localemergencycontact"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="3dp"
        app:layout_constraintLeft_toRightOf="@+id/localemergencycontact" />

    <TextView
        android:id="@+id/emergencycontacttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Contacts"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/emergencycontact1"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="21dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/emergencycontact1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintRight_toLeftOf="@+id/emergencybutton1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/emergencybutton1" />

    <EditText
        android:id="@+id/emergencycontact2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintRight_toLeftOf="@+id/emergencybutton2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintTop_toTopOf="@+id/emergencybutton2" />

    <TextView
        android:id="@+id/email_home_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="404dp"
        android:gravity="center"
        android:text="Go back to home"
        android:textColor="#0D47A1"
        android:textSize="20dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

</android.support.constraint.ConstraintLayout>
